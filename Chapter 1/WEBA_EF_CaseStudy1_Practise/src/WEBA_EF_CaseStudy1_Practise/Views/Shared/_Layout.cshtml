<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WEBA Entity Framework Case Study 1</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/typesettings-1.1.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/noty_custom.css" />
        <link rel="stylesheet" href="~/css/sticky_footer.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/noty/js/noty/jquery.noty.js"></script>
        <script src="~/lib/noty/js/noty/packaged/jquery.noty.packaged.js"></script>
        <script src="~/lib/moment/min/moment.min.js"></script>
        <script src="~/lib/moment/min/moment-with-locales.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">EntityFramework CaseStudy 1</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Companies" asp-action="Index">Company</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content  container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - ST0217 WEBA</p>
        </footer>
    </div>






    @RenderSection("scripts", required: false)

    <footer class="footer">
        <div class="container">
            <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </footer>
</body>
</html>
